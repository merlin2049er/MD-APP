    <div class="panel-heading">Outstanding Invoices: <% if @total == 0  %>
       Nothing here...
       <% else %>
      <%= @total %>
      <% end %>

      </div>
    <div class="panel-body">

      <table class="table-responsive">
        <table class="table">
        <thead>
        <tr>
          <th>Id </th>
          <th>Username </th>
          <th>First name</th>
          <th>Last name</th>
          <th>Email</th>


        </tr>
        </thead>

        <tbody>
        <% @users.each do |user| %>
          <tr>

            <td><%= user.id  %></td>
            <td><%=  user.username %></td>
            <td><%=  user.firstname  %></td>
            <td><%=  user.lastname  %></td>
            <td><%=  user.email  %></td>

