<% @user = current_user %>
<% if user_signed_in? && @user.admin %>

<div class="row">
<div class="col-lg-6">
<h1 class="page-header">Users Listing<br/>
  <small>Show me the money!</small>
</h1>

<!--
put a dropdown here with all, pending and invoiced as opotions
-->


  <div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading">Outstanding Invoices: <% if @total == 0  %>
       Nothing here...
       <% else %>
      <%= @total %>
      <% end %>

      </div>
    <div class="panel-body">

      <table class="table">
        <table class="table">
        <thead>
        <tr>
          <th>Id </th>
          <th>Username </th>
          <th>First name</th>
          <th>Last name</th>
          <th>Email</th>


        </tr>
        </thead>

        <tbody>
        <% @users.each do |user| %>
          <tr>

            <td><%= user.id  %></td>
            <td><%=  user.username %></td>
            <td><%=  user.firstname  %></td>
            <td><%=  user.lastname  %></td>
            <td><%=  user.email  %></td>


          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  </div>

  <div class ='pagenav'>
    <%== pagy_bootstrap_nav(@pagy) %> <br/>
  </div>
</div>


<% else %>
  <div class="alert alert-warning" role="alert">You must be the administrator to see the users.</div>
<% end %>
